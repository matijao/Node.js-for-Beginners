<h1>Comments</h1>

<table class="table">
    <thead>
      <tr>
        <th>id</th>
        <th>owner</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>

    {{#each comments}}

      <tr>
        <td>{{_id}}</td>
        <td>{{user.firstName}}</td>
        <td>{{generateDate date "DD MMMM YYYY"}}</td>
        <td>
                <form action="/admin/comments/{{_id}}?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-danger">
                        DELETE
                    </button>
                </form>
            </td>
        </tr>
    {{/each}}

    </tbody>
  </table>